{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "plugins": ["unused-imports", "no-comments"],
  "rules": {
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "error",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ],
    "no-comments/no-comments": "error"
  }
}
